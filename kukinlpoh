-------------------------------------------------------
-- LOAD WINDUI
-------------------------------------------------------
local WindUI = loadstring(game:HttpGet(
    "https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua"
))()

-------------------------------------------------------
-- CREATE WINDOW
-------------------------------------------------------
local Window = WindUI:CreateWindow({
    Title = "Library | Jazrad Hub",
    Icon = "laptop",
    Author = "made by Jazrad",
    Folder = "JazradHubLibrary",
    Size = UDim2.fromOffset(520, 420),
    Transparent = true,
    Theme = "Dark",

    -- ðŸ‘‰ ITO YON
    User = {
        Enabled = true,
        Callback = function() end,
        Anonymous = false
    },

    SideBarWidth = 150,
    ScrollBarEnabled = true
})
-------------------------------------------------------
-- REMOVE LEAVE GAME BUTTONS
-------------------------------------------------------
task.spawn(function()
    local function removeLeave(btn)
        if btn and (btn.Name == "LeaveGameButton" or btn.Name == "DontLeaveGameButton") then
            pcall(function() btn:Destroy() end)
        end
    end

    for _, v in ipairs(CoreGui:GetDescendants()) do
        removeLeave(v)
    end

    CoreGui.DescendantAdded:Connect(removeLeave)
end)

-------------------------------------------------------
-- TABS
-------------------------------------------------------

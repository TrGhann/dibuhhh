local function AddScripts(tab, section)
    for name, data in pairs(Scripts) do
        if data.section == section then
            tab:Button({
                Title = name,
                Icon = "play",
                Callback = function()
                    loadstring(data.script)()
                end
            })
        end
    end
end

AddScripts(OtherTab,"Other")
AddScripts(MM2Tab,"MM2")
AddScripts(ADMTab,"ADM")

-------------------------------------------------------
-- MISC TAB (FULL â€“ NOTHING REMOVED)
-------------------------------------------------------
MiscTab:Paragraph({
    Title = "Miscellaneous Features",
    Desc = "Various helpful utilities",
    Image = "settings",
    Color = "Blue"
})

MiscTab:Dropdown({
    Title = "Theme Switcher",
    Values = {"Dark","Light","Rose"},
    Default = "Dark",
    Callback = function(theme)
        WindUI:SetTheme(theme)
    end
})

MiscTab:Button({
    Title = "Anti AFK",
    Icon = "clock",
    Callback = function()
        localPlayer.Idled:Connect(function()
            VirtualUser:Button2Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
            task.wait(1)
            VirtualUser:Button2Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
        end)
    end
})

MiscTab:Toggle({
    Title = "Auto Snowball Pug",
    Default = false,
    Callback = function(v)
        getgenv().AutoSnowballPug = v
        if v then
            task.spawn(function()
                while getgenv().AutoSnowballPug do
                    task.wait(0.15)
                    pcall(function()
                        local api = ReplicatedStorage:FindFirstChild("API")
                        if api then
                            for _, r in pairs(api:GetChildren()) do
                                if r:IsA("RemoteEvent") then r:FireServer()
                                elseif r:IsA("RemoteFunction") then r:InvokeServer(true) end
                            end
                        end
                    end)
                end
            end)
        end
    end
})

MiscTab:Button({
    Title = "Make All Pets Mega Neon",
    Icon = "sparkles",
    Callback = function()
        pcall(function()
            local ClientData = require(ReplicatedStorage.ClientModules.Core.ClientData)
            for _, pet in pairs(ClientData.get_data()[tostring(localPlayer)].inventory.pets) do
                pet.properties.mega_neon = true
                pet.properties.rideable = true
                pet.properties.flyable = true
            end
        end)
    end
})

MiscTab:Button({
    Title = "Rejoin Server",
    Icon = "refresh-cw",
    Callback = function()
        TeleportService:TeleportToPlaceInstance(game.PlaceId, game.JobId, localPlayer)
    end
})

MiscTab:Button({
    Title = "Server Hop",
    Icon = "shuffle",
    Callback = function()
        local servers = HttpService:JSONDecode(
            game:HttpGet("https://games.roblox.com/v1/games/"..game.PlaceId.."/servers/Public?limit=100")
        )
        for _, s in pairs(servers.data) do
            if s.playing < s.maxPlayers and s.id ~= game.JobId then
                TeleportService:TeleportToPlaceInstance(game.PlaceId, s.id, localPlayer)
                break
            end
        end
    end
})

MiscTab:Paragraph({
    Title = "Player Info",
    Desc = "Display Name: "..localPlayer.DisplayName..
           "\nUsername: @"..localPlayer.Name..
           "\nUser ID: "..localPlayer.UserId,
    Color = "Green"
})

